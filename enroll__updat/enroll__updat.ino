#include <Adafruit_Fingerprint.h>

#include <SPI.h>
#include <Ethernet.h>

byte mac[] = { 0xDE, 0xAD, 0xBE, 0xEF, 0xFE, 0xED };
 
IPAddress ip(192,168,1,2); //IP address for your arduino.

char server[] = "192.168.1.3"; //IP address of your computer.

